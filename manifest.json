{
  "manifest_version": 3,
  "name": "HTML Schema Generator",
  "version": "0.0.1",
  "description": "Parses a page's HTML and returns an HTML schema.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["iframeScript.js", "iframeStyles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }  
}
